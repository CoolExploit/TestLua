-- Load the library
local BetaUILib = loadstring(game:HttpGet("https://yourlinkhere.com/BetaUILib"))()

-- Create the window with a custom name and settings
local Window = BetaUILib:MakeWindow({
    Name = "Welcome to My Enhanced UI",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "EnhancedUIConfig"
})

-- Add an intro label to show at the top of the window
local IntroTab = Window:MakeTab({
    Name = "Introduction",
    Icon = "rbxassetid://4483345998",  -- Replace with a valid icon asset
    PremiumOnly = false
})

IntroTab:AddLabel("Welcome to the enhanced UI! Here's a smooth experience with neat layout.")
IntroTab:AddParagraph("How to use:", "Explore buttons below to interact with the UI!")

-- Create another tab for interactive elements
local InteractiveTab = Window:MakeTab({
    Name = "Interactive Controls",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Adding a button with better placement and cleaner layout
InteractiveTab:AddButton({
    Name = "Click Me!",
    Callback = function()
        print("Button clicked!")
    end
})

-- Add a toggle switch with a callback
InteractiveTab:AddToggle({
    Name = "Enable Feature",
    Default = false,
    Callback = function(value)
        print("Toggle is now " .. tostring(value))
    end
})

-- Add a color picker with a default color
InteractiveTab:AddColorpicker({
    Name = "Pick a Color",
    Default = Color3.fromRGB(255, 0, 0),
    Callback = function(value)
        print("Color picked: " .. tostring(value))
    end
})

-- Add a slider for number input with a label
InteractiveTab:AddSlider({
    Name = "Set Value",
    Min = 0,
    Max = 100,
    Default = 50,
    Color = Color3.fromRGB(255, 255, 255),
    Increment = 1,
    ValueName = "units",
    Callback = function(value)
        print("Slider Value: " .. tostring(value))
    end
})

-- Add a TextBox with default input value
InteractiveTab:AddTextbox({
    Name = "Enter Text",
    Default = "Type something here...",
    TextDisappear = true,
    Callback = function(value)
        print("Textbox Input: " .. value)
    end
})

-- Add a UI List that shows dynamic items (can be used for lists of options or objects)
local ListTab = Window:MakeTab({
    Name = "UI List",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Create a scrolling list with dynamic content
local listContainer = ListTab:AddList({
    Name = "Dynamic UI List",
    ListSize = UDim2.new(0, 300, 0, 500),
    ItemHeight = 40,
    Callback = function(value)
        print("Selected Item: " .. value)
    end
})

-- Add items to the list dynamically
listContainer:AddItem("Item 1")
listContainer:AddItem("Item 2")
listContainer:AddItem("Item 3")
listContainer:AddItem("Item 4")
listContainer:AddItem("Item 5")

-- Initialize the library
BetaUILib:Init()

-- Optionally, you can destroy the UI with:
-- BetaUILib:Destroy()
